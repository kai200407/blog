---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
import Search from './Search.astro';
---

<header class="py-8">
	<div class="container mx-auto px-4 max-w-2xl">
		<nav class="flex items-center justify-between">
			<!-- Logo / Site Title -->
			<a 
				href={import.meta.env.BASE_URL} 
				class="text-lg font-semibold tracking-tight hover:text-primary transition-colors"
			>
				{SITE_TITLE}
			</a>
			
			<!-- Navigation Links -->
			<div class="flex items-center gap-6">
				<div class="hidden sm:flex items-center gap-6 text-sm">
					<HeaderLink href={`${import.meta.env.BASE_URL}blog`}>Writing</HeaderLink>
					<HeaderLink href={`${import.meta.env.BASE_URL}about`}>About</HeaderLink>
				</div>
				
				<div class="flex items-center gap-2">
					<Search />
					<ThemeToggle />
				</div>
			</div>
		</nav>
	</div>
</header>
