---
const today = new Date();
---

<footer class="py-12 mt-auto">
	<div class="container mx-auto px-4 max-w-2xl">
		<hr class="border-border mb-8" />
		<div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-muted-foreground">
			<p>
				&copy; {today.getFullYear()} Your Name
			</p>
			<div class="flex items-center gap-4">
				<a href="https://github.com" target="_blank" rel="noreferrer" class="hover:text-primary transition-colors">
					GitHub
				</a>
				<a href="https://twitter.com" target="_blank" rel="noreferrer" class="hover:text-primary transition-colors">
					Twitter
				</a>
				<a href="/rss.xml" class="hover:text-primary transition-colors">
					RSS
				</a>
			</div>
		</div>
	</div>
</footer>
