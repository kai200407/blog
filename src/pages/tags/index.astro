---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const allPosts = await getCollection("blog");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---

<Layout title="Tags" description="All tags">
  <h1 class="text-3xl font-bold mb-8">Tags</h1>
  <div class="flex flex-wrap gap-4">
    {
      tags.map((tag) => (
        <a
          href={`/tags/${tag}`}
          class="bg-muted px-4 py-2 rounded-full text-muted-foreground hover:bg-primary hover:text-primary-foreground transition-colors"
        >
          #{tag}
        </a>
      ))
    }
  </div>
</Layout>
